<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:background="#ffffff"
				android:layout_height="86dp"
				android:orientation="horizontal" >
				<RelativeLayout
					android:layout_width="76dp"
					android:layout_height="86dp"
					android:layout_marginLeft="10dp">
					<ImageView
						android:layout_width="66dp"
						android:layout_height="66dp"
						android:id="@+id/img_proImgPath"
						android:background="@drawable/test"
						android:layout_centerVertical="true"/>
				</RelativeLayout>
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_weight="1"
					android:orientation="vertical">
					<TextView
						style="@style/wrap_content"
						android:text="产品名称名称名称"
						android:layout_marginTop="10dp"
						android:maxLines="2"
						android:textSize="11dp"
						android:lineSpacingExtra="4dp"
						android:id="@+id/tv_proName"/>
					<TextView
						android:layout_marginTop="10dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:text="商品满意度"/>

					<!-- 星级评分条 -->
					<RatingBar
						android:id="@+id/rb_productLevel"
						style="@style/myRatingBar"
						android:layout_width="76dp"
						android:layout_height="20dp"
						android:layout_gravity="center"
						android:layout_centerHorizontal="true"
						android:numStars="5"
						android:rating="5"
						android:stepSize="1" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="80dp"
					android:layout_height="match_parent"
					android:orientation="vertical"
					android:layout_marginRight="30dp">

				</LinearLayout>
			</LinearLayout>

			<TextView
				android:layout_marginTop="5dp"
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#c6c6c6" />

			<LinearLayout
				style="@style/wrap_content"
				android:orientation="vertical">
				<EditText
					style="@style/wrap_content"
					android:id="@+id/et_remark"
					android:layout_marginTop="5dp"
					android:layout_marginBottom="5dp"
					android:background="@drawable/bg_edittext"
					android:maxLines="8"
					android:hint="商品是否给力？快分享你的购物心得吧！"
					android:text=""/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="110dp"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/iv_pic1"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/mall_upload_common"/>
					<ImageView
						android:id="@+id/iv_pic2"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/mall_upload_common"/>
					<ImageView
						android:id="@+id/iv_pic3"
						android:layout_weight="1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/mall_upload_common"/>
				</LinearLayout>
				<TextView
					android:layout_marginTop="5dp"
					android:layout_width="fill_parent"
					android:layout_height="10dp"
					android:background="#c6c6c6" />
		</LinearLayout>
</LinearLayout>
</LinearLayout>