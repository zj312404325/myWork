<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:background="#ffffff">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:background="#ffffff"
				android:layout_marginRight="0dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp">
				<ImageView
					android:id="@+id/iv_heador"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:background="@drawable/icon_common_order"
					android:layout_gravity="center_vertical" />
				<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/tv_userName"
						android:text="131****22"
						android:textColor="#000000"
						android:textSize="14dp"
						android:layout_gravity="center_vertical"/>
					<ImageView
						android:id="@+id/iv_orderStar"
						android:layout_width="80dp"
						android:layout_height="13dp"
						android:background="@drawable/fivestar_red_5"
						android:layout_below="@+id/tv_userName"/>

				</RelativeLayout>

				<TextView
					android:id="@+id/tv_orderTime"
					android:layout_width="wrap_content"
					android:layout_height="20dp"
					android:layout_gravity="center_vertical"
					android:layout_toEndOf="@id/iv_orderStar"
					android:gravity="right"
					android:layout_marginRight="5dp"
					android:layout_weight="1"
					android:text="2018-01-01"
					android:textSize="16dp" />
			</LinearLayout>

			<!--<TextView
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#c6c6c6" />-->

			<LinearLayout
				style="@style/wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:background="#ffffff"
				android:layout_marginLeft="40dp">
				<TextView
					style="@style/wrap_content"
					android:padding="5dp"
					android:layout_width="match_parent"
					android:id="@+id/tv_remark"
					android:maxLines="8"
					android:lineSpacingMultiplier="1.2"
					android:textColor="@color/black"
					android:text="撒大声地发顺丰的士大夫士大夫暗示法士大夫撒地方是的范德萨士大夫士大夫撒地方撒范德萨的范德萨范德萨发水电费水电费水电费水电费第三方士大夫撒地方"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="100dp"
					android:orientation="horizontal"
					android:id="@+id/ll_imageArea"
					android:layout_marginTop="5dp">
					<ImageView
						android:id="@+id/iv_pic1"
						android:layout_weight="1"
						android:layout_width="90dp"
						android:layout_height="90dp"
						android:background="@drawable/noimg"/>
					<ImageView
						android:layout_marginLeft="10dp"
						android:id="@+id/iv_pic2"
						android:layout_weight="1"
						android:layout_width="90dp"
						android:layout_height="90dp"
						android:background="@drawable/noimg"/>
					<ImageView
						android:layout_marginLeft="10dp"
						android:id="@+id/iv_pic3"
						android:layout_weight="1"
						android:layout_width="90dp"
						android:layout_height="90dp"
						android:background="@drawable/noimg"/>
				</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>