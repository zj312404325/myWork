<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical"
		        android:background="#ffffff"  android:paddingLeft="16dp"  android:paddingRight="16dp" 
		        android:layout_marginBottom="16dp">
			        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"
			            android:layout_marginTop="16dp">
			            <TextView style="@style/wrap_content" android:text="某某某" android:id="@+id/tv_Contact"/>
			            <TextView style="@style/wrap_content" android:text="12345677879" android:layout_marginLeft="16dp"
			                android:id="@+id/tv_MobilePhone"/>
			        </LinearLayout>
			        <TextView style="@style/wrap_content" android:text="江苏东南开发区盛" android:layout_marginTop="10dp"
			            android:textColor="#8f8f8f" android:id="@+id/tv_Province"/>
			        <TextView style="@style/wrap_content" android:text="江苏东南开发区盛大发圣达菲圣达菲" android:layout_marginTop="10dp"
			            android:textColor="#8f8f8f" android:id="@+id/tv_Addr"/>
			        <TextView style="@style/wrap_content" android:text="215500" android:layout_marginTop="10dp"
			            android:textColor="#8f8f8f" android:id="@+id/tv_Postcode"/>
			        <LinearLayout style="@style/line"  android:layout_marginTop="10dp"/>
			        <RelativeLayout style="@style/match_parent" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">  
		             	<RadioButton
							 style="@style/wrap_content"
							 android:button="@null"
							 android:background="@drawable/radio_item"
							 android:id="@+id/rb_AddrDefault"/>

						<TextView
							style="@style/wrap_content"
							android:text="设为默认"
							android:layout_marginLeft="20dp"
							android:layout_gravity="center_vertical"  />

						<Button
							style="@style/btnwhite"
							android:text="选择"
							android:layout_width="60dp"
							android:layout_height="30dp"
							android:layout_marginLeft="100dp"
							android:id="@+id/btn_select"
							android:layout_gravity="right"/>

					<TextView
						style="@style/wrap_content"
						android:text="编辑"
						android:drawableLeft="@drawable/icon_edit"
						android:id="@+id/tv_icon_edit"
						android:layout_marginLeft="180dp"
						android:layout_centerVertical="true"  />
					<TextView
						style="@style/wrap_content"
						android:text="删除"
						android:drawableLeft="@drawable/icon_del"
						android:id="@+id/tv_icon_del"
						android:layout_marginLeft="260dp"
						android:layout_centerVertical="true"/>

		           	<!--<Button  style="@style/btnblue"  android:text="编辑" android:id="@+id/btn_edit"
		            android:layout_width="60dp" android:layout_height="30dp"
		            android:layout_alignParentRight="true" android:layout_marginRight="76dp"
		            />
		        	<Button  style="@style/btnblue"  android:text="删除"  android:id="@+id/btn_del"
		            android:layout_width="60dp" android:layout_height="30dp"
		             android:layout_alignParentRight="true"
		            />-->
		        </RelativeLayout>
	</LinearLayout>
</LinearLayout>
