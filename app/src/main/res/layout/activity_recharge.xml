<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RechargeActivity" >

     <include  android:id="@+id/top_title"  layout="@layout/top" />
    <ScrollView style="@style/fill" android:layout_below="@id/top_title" >
		<LinearLayout android:layout_width="match_parent"  android:layout_height="wrap_content" android:orientation="vertical" >
		    	<RelativeLayout android:layout_width="match_parent" android:layout_height="50dp" 
			    	android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:focusable="true"  android:focusableInTouchMode="true">


					<TextView
						style="@style/wrap_content"
						android:text="充值金额："
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:textColor="#939393"
						android:layout_width="80dp"
						android:maxLines="1" />

					<EditText style="@style/wrap_content" android:layout_width="match_parent" android:text="" android:layout_marginLeft="80dp"
						android:layout_centerVertical="true" android:background="@null" android:hint="请输入充值金额"
						android:id="@+id/et_rechargemoney" android:inputType="numberDecimal"/>
				    	    
				   			    
				</RelativeLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0"
				    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />
				
				<RelativeLayout android:layout_width="match_parent" android:layout_height="50dp" 
			    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:focusable="true"  android:focusableInTouchMode="true">
					<TextView
						style="@style/wrap_content"
						android:text="线下充值银行账户："
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:maxLines="1" />
				   			    
				</RelativeLayout>
				<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0"
				    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />
		        
				<LinearLayout android:layout_width="match_parent" android:layout_height="80dp" 
			    android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
				    <RadioButton style="@style/wrap_content" android:layout_gravity="center_vertical" android:checked="true"  />
				   	<ImageView android:background="@drawable/bankzh" android:layout_width="70dp" android:layout_height="20dp"
				   	    android:layout_gravity="center_vertical"
				   	    />	
				   	<TextView style="@style/wrap_content" android:layout_gravity="center_vertical"  android:layout_marginLeft="10dp"
				   	    android:text="中国银行常熟徐市支行
533958898073 
苏州金赢网电子商务有限公司" android:textSize="12dp" />	   			    
				</LinearLayout>
		    
				<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0"
				    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />
				
				
				<RelativeLayout style="@style/fill" android:background="#ffffff" android:layout_height="110dp">

			        <ImageView android:background="@drawable/nopic" android:layout_width="74dp" android:layout_height="74dp"
			            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:id="@+id/iv_businesslicense"/>
			        <TextView style="@style/wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="114dp" 
			            android:textSize="12dp"
			            android:text="请上传打款凭证：
（提示）点击左边图片上传打款凭证"/>
			  
	
			    </RelativeLayout>
			    
				<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0"
				    android:layout_marginLeft="10dp" android:layout_marginRight="10dp" />	
				
				 <Button  android:id="@+id/btn_pay" style="@style/btndarkblue"
            android:text="提交" android:layout_width="match_parent" android:layout_marginTop="20dp" android:layout_marginBottom="20dp" 
            android:layout_marginLeft="40dp" android:layout_marginRight="40dp"/>
		    
		 
		</LinearLayout>
	</ScrollView>

</RelativeLayout>
