<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rl_hotelName"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/bg_edittext">

	<LinearLayout
		android:id="@+id/rl_addFastMatch"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:text="*"
					android:textSize="18sp"
					android:textColor="#e60012"/>
				<TextView
					android:id="@+id/tv_proName"
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:text="商品名称:"
					android:textSize="18sp" />
			</LinearLayout>


			<EditText
				android:id="@+id/et_proName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="10"/>

		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">
			<TextView
				android:id="@+id/tv_brand"
				android:layout_width="95dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="品							牌:"
				android:textSize="18sp" />

			<EditText
				android:id="@+id/et_brand"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="10"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:text="*"
					android:textSize="18sp"
					android:textColor="#e60012"/>
					<TextView
						android:id="@+id/tv_proQuality"
						android:layout_width="90dp"
						android:layout_height="wrap_content"
						android:text="材						质:"
						android:textSize="18sp" />
			</LinearLayout>

			<EditText
				android:id="@+id/et_proQuality"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="10"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/tv_model"
					android:layout_width="95dp"
					android:layout_marginLeft="5dp"
					android:layout_height="wrap_content"
					android:text="型	  					号:"
					android:textSize="18sp" />
			</LinearLayout>

			<EditText
				android:id="@+id/et_model"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="10"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:text="*"
					android:textSize="18sp"
					android:textColor="#e60012"/>
				<TextView
					android:id="@+id/tv_spec"
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:text="详细规格:"
					android:textSize="18sp" />
			</LinearLayout>

			<EditText
				android:id="@+id/et_spec"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="10"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:text="*"
					android:textSize="18sp"
					android:textColor="#e60012"/>
				<TextView
					android:id="@+id/tv_quantity"
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:text="数						量:"
					android:textSize="18sp" />
			</LinearLayout>

			<EditText
				android:id="@+id/et_quantity"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:inputType="number"
				android:singleLine="true"
				android:maxLength="10"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:text="*"
					android:textSize="18sp"
					android:textColor="#e60012"/>
				<TextView
					android:id="@+id/tv_unit"
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:text="单						位:"
					android:textSize="18sp" />
			</LinearLayout>

			<EditText
				android:id="@+id/et_unit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="10"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<LinearLayout
				android:layout_width="100dp"
				android:layout_height="wrap_content">
				<TextView
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:text="*"
					android:textSize="18sp"
					android:textColor="#e60012"/>
				<TextView
					android:id="@+id/tv_proDesc"
					android:layout_width="90dp"
					android:layout_height="wrap_content"
					android:text="产品描述:"
					android:textSize="18sp" />
			</LinearLayout>

			<EditText
				android:id="@+id/et_proDesc"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="20"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">
			<TextView
				android:id="@+id/tv_require"
				android:layout_width="95dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:text="	特殊要求:"
				android:textSize="18sp" />

			<EditText
				android:id="@+id/et_require"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_edittext"
				android:padding="5dp"
				android:singleLine="true"
				android:maxLength="20"/>
		</LinearLayout>

		<LinearLayout
			style="@style/line"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"/>

		<LinearLayout
			android:id="@+id/ll_addHotelEvaluate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/rl_addFastMatch"
			android:layout_marginTop="5dp"
			android:orientation="vertical"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp">

			<!--<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_weight="1"
			android:text="产品图片:"
			android:textSize="18sp" />-->

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="110dp"
			android:orientation="horizontal">
			<com.example.administrator.jymall.view.MyImageView
				android:id="@+id/iv_pic1"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/mall_upload_common"/>
			<com.example.administrator.jymall.view.MyImageView
				android:id="@+id/iv_pic2"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/mall_upload_common"/>
			<com.example.administrator.jymall.view.MyImageView
				android:id="@+id/iv_pic3"
				android:layout_weight="1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/mall_upload_common"/>
		</LinearLayout>

		<Button
			style="@style/btndarkblue"
			android:id="@+id/btn_delete"
			android:layout_marginTop="10dp"
			android:text="删除"
			android:layout_width="match_parent"
			android:layout_marginBottom="20dp"
			android:layout_marginLeft="40dp"
			android:layout_marginRight="40dp"
			android:visibility="visible"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>