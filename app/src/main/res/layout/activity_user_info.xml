<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:background="#ececec"
    tools:context=".UserInfoActivity" >

    <include  android:id="@+id/top_title"  layout="@layout/top" />
	<ScrollView style="@style/fill" android:layout_below="@id/top_title" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		    android:background="#ffffff"
			android:layout_marginTop="10dp">
			<LinearLayout android:layout_width="fill_parent" android:layout_height="1dp" android:background="#d0d0d0" />
			<RelativeLayout
				android:id="@+id/uc_head"
				android:layout_width="match_parent"
				android:layout_height="100dp"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="头像"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			    <ImageView
					android:id="@+id/heador"
					android:layout_width="67dp"
					android:layout_height="67dp"
					android:layout_alignParentRight="true"
                	android:background="@drawable/userhead"
					android:layout_centerVertical="true"
					android:layout_marginRight="20dp"/>
			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/userinfoedit"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="账户信息"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			   			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="0.5dp"
				android:background="#d0d0d0" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/userauthentication"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="实名认证"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			   			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/btn_userMoney"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="资金账户"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			   			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="0.5dp"
				android:background="#d0d0d0" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/editpwd"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="修改密码"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			   			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="0.5dp"
				android:background="#d0d0d0" />
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/address"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="收货地址管理"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			   			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="1dp" android:background="#d0d0d0" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/invoice"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">
			    <TextView
					style="@style/wrap_content"
					android:text="发票管理"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />

			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			</RelativeLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#d0d0d0" />
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/bank"
			    android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

			    <TextView
					style="@style/wrap_content"
					android:text="银行账户"
					android:layout_alignParentLeft="true"
			        android:layout_centerVertical="true" />
			    
			   			    
			    <ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>
			    
			</RelativeLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#d0d0d0" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/agreement"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<TextView
					style="@style/wrap_content"
					android:text="平台协议"
					android:layout_alignParentLeft="true"
					android:layout_centerVertical="true" />

				<ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>

			</RelativeLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#d0d0d0" />
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
		  	    android:layout_marginRight="20dp"
				android:orientation="horizontal"
				android:layout_marginTop="20dp"
		  	    android:layout_marginBottom="20dp">
		  	    
				<Button
					android:id="@+id/btn_exit"
					style="@style/btndarkblue"
	            	android:text="退    出"
					android:layout_weight="1"/>
	  		</LinearLayout>
			
		</LinearLayout>
	</ScrollView>

</RelativeLayout>
