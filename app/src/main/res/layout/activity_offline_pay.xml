<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".OfflinePayActivity" >

    <include  android:id="@+id/top_title"  layout="@layout/top" />
	<ScrollView style="@style/fill" android:layout_below="@id/top_title" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ececec"
			android:orientation="vertical" >

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:background="#ececec"
				android:layout_gravity="center_horizontal">
				<TextView
					style="@style/wrap_content"
					android:layout_marginLeft="10dp"
					android:text="线下支付收款信息"
					android:gravity="center_vertical"
					android:layout_gravity="center_vertical"   />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#ffffff"
				android:orientation="vertical"
				android:layout_gravity="center_horizontal">
				<TextView
					style="@style/wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:text="收款单位：苏州金赢网电子商务有限公司"
					android:layout_gravity="center_vertical"   />
				<TextView
					style="@style/wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="5dp"
					android:text="开  户   行：中国银行常熟古里支行"
					android:layout_gravity="center_vertical"   />

				<TextView
					style="@style/wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="5dp"
					android:text="账          号：533958898073"
					android:layout_gravity="center_vertical"   />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="0.5dp"
					android:background="#d0d0d0"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp" />

				<TextView
					style="@style/wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="5dp"
					android:textColor="@color/red"
					android:text="提示：打款请注明公司名称或用户名"
					android:layout_gravity="center_vertical"   />
				<TextView
					style="@style/wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="5dp"
					android:lines="2"
					android:text="我们收到款后会第一时间给您处理，您也可拨打客服热线：0512-52686666 及时与我们联系"
					android:layout_gravity="center_vertical"   />
			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:background="#ffffff">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp"
					android:focusable="true"
					android:focusableInTouchMode="true">
						<TextView
							style="@style/wrap_content"
							android:text="登录密码："
							android:gravity="center"
							android:layout_alignParentLeft="true"
							android:layout_centerVertical="true"
							android:textColor="#939393"
							android:layout_width="80dp"
							android:maxLines="1"
							android:hint="请输入登录密码"/>

						<EditText
							style="@style/wrap_content"
							android:layout_width="match_parent"
							android:text=""
							android:textSize="14sp"
							android:hint="请输入支付密码"
							android:layout_marginLeft="80dp"
							android:layout_centerVertical="true"
							android:background="@null"
							android:inputType="textPassword"
							android:id="@+id/et_password"/>
				</RelativeLayout>

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="0.5dp"
					android:background="#d0d0d0"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp" />
			</LinearLayout>

			<Button
				style="@style/btndarkblue"
				android:id="@+id/btn_offlinePay"
				android:text="支付"
				android:layout_width="match_parent"
				android:layout_marginTop="20dp"
				android:layout_marginBottom="20dp"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"/>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
