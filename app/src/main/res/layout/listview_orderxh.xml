<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"  android:layout_height="wrap_content" android:orientation="vertical"  >
    <LinearLayout android:layout_width="match_parent"  android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="16dp" 
    android:background="#ffffff" >
  			 <LinearLayout style="@style/line"  />
  			<LinearLayout android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="16dp"
  			    android:layout_marginRight="16dp" android:orientation="horizontal" android:id="@+id/orderinfo" >
  			    <ImageView android:background="@drawable/order_ico" android:layout_width="17dp" android:layout_height="18dp" 
  			        android:layout_gravity="center_vertical" />
  			    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp"  android:layout_weight="1"
  			        android:text="聊城市广朋金属材料有限公司 " android:layout_gravity="center_vertical" android:maxLines="1"
  			        android:id="@+id/tv_owner" />
  			    <TextView style="@style/wrap_content" android:visibility="gone" android:id="@+id/tv_id"/>
  		
  			    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="交易成功"
  			        android:layout_gravity="center_vertical" android:textColor="#619e5e" android:id="@+id/tv_orderStatus" />
  			    <ImageView android:layout_width="9dp" android:layout_height="16dp" android:background="@drawable/right" 
  			        android:layout_gravity="center_vertical" android:layout_marginLeft="10dp"/>
  			</LinearLayout>
  			<LinearLayout style="@style/line" android:layout_marginLeft="16dp"   android:layout_marginRight="16dp"  />	 
  			
  			<com.jinying.jyapp.view.MyListView android:layout_width="match_parent" android:layout_height="wrap_content"
  			    android:id="@+id/list_orderinfo">
  			    
  			</com.jinying.jyapp.view.MyListView>
  			
  			<RelativeLayout style="@style/wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
  			    android:layout_marginLeft="16dp"   android:layout_marginRight="16dp">
		         <TextView style="@style/wrap_content" android:text="数量：5.8 吨" android:id="@+id/tv_count"
		                android:textColor="@color/gray" android:textSize="12dp" />
		         
		         <TextView style="@style/wrap_content" android:text="实付款：3400元" android:textColor="#b53144" 
		               android:textSize="12dp" android:layout_alignParentRight="true" android:id="@+id/tv_money"/>
  			</RelativeLayout>
  			
  			<LinearLayout style="@style/line" android:layout_marginLeft="16dp"   android:layout_marginRight="16dp" android:visibility="gone" />
  			<LinearLayout style="@style/wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
  			    android:layout_marginLeft="16dp"   android:layout_marginRight="16dp"   >
		            
		           
		           	<Button  style="@style/btnwhite"  android:text="取消交易" 
		            android:layout_width="90dp" android:layout_height="30dp"
		             android:layout_marginRight="10dp" android:id="@+id/btn_cancel"
		           android:visibility="gone"
		            />
		        	<Button  style="@style/btnwhite"  android:text="支付" 
		            android:layout_width="60dp" android:layout_height="30dp"
		  			android:layout_marginRight="10dp" android:id="@+id/btn_pay"
		  			 android:visibility="gone"
		            />
		        	<Button  style="@style/btnwhite"  android:text="收货" 
		            android:layout_width="60dp" android:layout_height="30dp"
		  			android:layout_marginRight="10dp" android:id="@+id/btn_sh"
		  			 android:visibility="gone"
		            />
		        	
		        	<Button  style="@style/btnwhite"  android:text="退货" 
		            android:layout_width="60dp" android:layout_height="30dp"
		  			android:layout_marginRight="10dp" android:id="@+id/btn_th"
		  			 android:visibility="gone"
		            />
		        	
		        	<Button  style="@style/btnwhite"  android:text="退款" 
		            android:layout_width="60dp" android:layout_height="30dp"
		  			android:layout_marginRight="10dp" android:id="@+id/btn_tk"
		  			 android:visibility="gone"
		            />
		        	
		        	<Button
						style="@style/btnwhite"
						android:text="卖家同意退货，请发货"
		            	android:layout_width="150dp"
						android:layout_height="30dp"
		  				android:layout_marginRight="10dp"
						android:id="@+id/btn_thfh"
		  			 	android:visibility="gone"
		            />
		        	
		        </LinearLayout>
		    <LinearLayout style="@style/line"  />
		</LinearLayout>    
</LinearLayout>		    
