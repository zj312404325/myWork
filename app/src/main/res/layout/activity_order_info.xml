<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    tools:context=".MyOrderInfoActivity" >

    <include  android:id="@+id/top_title"  layout="@layout/top" />
	<ScrollView style="@style/fill" android:layout_below="@id/top_title" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
		    
		    <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
		    	android:background="#ffffff" >
			    <RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="50dp"
					android:background="@color/blue">
				   	 <TextView
						 style="@style/wrap_content"
						 android:text="交易成功"
						 android:layout_marginLeft="40dp"
						 android:layout_centerVertical="true"
						 android:textColor="#ffffff"
						 android:textSize="20sp"
						 android:id="@+id/tv_orderStatus"/>
				</RelativeLayout>

				<LinearLayout style="@style/line" />
			</LinearLayout>
			
		   <LinearLayout
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:orientation="vertical"
			   android:background="#ffffff">

				<RelativeLayout
					style="@style/marginlr"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp">

					<ImageView
						android:background="@drawable/orderdtl_address"
						android:layout_width="17dp"
						android:layout_height="20dp"
						android:layout_gravity="center_vertical" />

				    <TextView
						style="@style/wrap_content"
						android:layout_marginLeft="30dp"
						android:text="某某某"
						android:id="@+id/tv_contact"/>
				    <TextView
						style="@style/wrap_content"
						android:text="138****2456"
						android:layout_marginLeft="20dp"
						android:layout_toRightOf ="@+id/tv_contact"
				        android:id="@+id/tv_mobilePhone"/>

					<TextView
						style="@style/wrap_content"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="2"
						android:layout_marginLeft="30dp"
						android:text="江苏省常熟市东南开发区东南大道333号"
						android:layout_marginTop="5dp"
						android:layout_below="@id/tv_contact"
						android:id="@+id/tv_buyAddr"/>
				</RelativeLayout>
		    </LinearLayout>

			<LinearLayout
				style="@style/line"
				android:layout_marginLeft="16dp"
				android:layout_marginRight="16dp"  />
				<com.example.administrator.jymall.view.MyListView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/list_orderinfo">
				</com.example.administrator.jymall.view.MyListView>


		     <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="vertical"
		    	 android:background="#ffffff"
				 android:layout_marginTop="16dp">

				 <RelativeLayout
					 android:layout_width="match_parent"
					 android:layout_height="30dp"
					 android:layout_marginLeft="16dp"
					 android:layout_marginRight="16dp">
					 <TextView
						 style="@style/wrap_content"
						 android:text="订单编号："
						 android:layout_alignParentLeft="true"
						 android:layout_centerVertical="true"
						 android:textColor="#939393"
						 android:layout_width="80dp"
						 android:maxLines="1" />

					 <TextView
						 style="@style/wrap_content"
						 android:text="23234234234234234234"
						 android:layout_marginLeft="80dp"
						 android:layout_centerVertical="true"
						 android:id="@+id/tv_orderNo" />
				 </RelativeLayout>

				 <RelativeLayout
					 android:layout_width="match_parent"
					 android:layout_height="30dp"
					 android:layout_marginLeft="16dp"
					 android:layout_marginRight="16dp">
					 <TextView
						 style="@style/wrap_content"
						 android:text="下单时间："
						 android:layout_alignParentLeft="true"
						 android:layout_centerVertical="true"
						 android:textColor="#939393"
						 android:layout_width="80dp"
						 android:maxLines="1" />

					 <TextView
						 style="@style/wrap_content"
						 android:text="2016-09-12 21:12:23"
						 android:layout_marginLeft="80dp"
						 android:layout_centerVertical="true"
						 android:id="@+id/tv_createDate" />
				 </RelativeLayout>

				 <LinearLayout
					 style="@style/line"
					 android:layout_marginLeft="16dp"
					 android:layout_marginRight="16dp"/>

				 <RelativeLayout
					 android:layout_width="match_parent"
					 android:layout_height="30dp"
					 android:layout_marginLeft="16dp"
					 android:layout_marginRight="16dp">
					 <TextView
						 style="@style/wrap_content"
						 android:text="发票类型："
						 android:layout_alignParentLeft="true"
						 android:layout_centerVertical="true"
						 android:textColor="#939393"
						 android:layout_width="80dp"
						 android:maxLines="1" />

					 <TextView
						 style="@style/wrap_content"
						 android:text="普通发票"
						 android:layout_marginLeft="80dp"
						 android:layout_centerVertical="true"
						 android:id="@+id/tv_invoiceType" />
				 </RelativeLayout>

				 <RelativeLayout
					 android:layout_width="match_parent"
					 android:layout_height="30dp"
					 android:layout_marginLeft="16dp"
					 android:layout_marginRight="16dp">
					 <TextView
						 style="@style/wrap_content"
						 android:text="发票抬头："
						 android:layout_alignParentLeft="true"
						 android:layout_centerVertical="true"
						 android:textColor="#939393"
						 android:layout_width="80dp"
						 android:maxLines="1" />

					 <TextView
						 style="@style/wrap_content"
						 android:text="发票抬头抬头抬头"
						 android:layout_marginLeft="80dp"
						 android:layout_centerVertical="true"
						 android:id="@+id/tv_title" />
				 </RelativeLayout>

				<LinearLayout style="@style/line" />
			</LinearLayout>
			
		     
		     <LinearLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:orientation="vertical"
		    	 android:background="#ffffff"
				 android:layout_marginTop="16dp"
				 android:layout_marginBottom="20dp">
			    <RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
				    android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp">
				    <TextView
						style="@style/wrap_content"
						android:text="商品总额："
						android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
						android:textColor="#939393"
						android:layout_width="80dp"
						android:maxLines="1" />
				    
				   	 <TextView
						 style="@style/wrap_content"
						 android:text="￥600.00"
						 android:layout_marginLeft="80dp"
						 android:layout_centerVertical="true"
						 android:layout_alignParentRight="true"
						 android:textColor="#b53144"
						 android:id="@+id/tv_productMoney" />
				   			    
				</RelativeLayout>
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
				    android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp">
				    <TextView
						style="@style/wrap_content"
						android:text="运费："
						android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
						android:textColor="#939393"
						android:layout_width="80dp"
						android:maxLines="1" />
				    
				   	 <TextView
						 style="@style/wrap_content"
						 android:text="￥8.00"
						 android:layout_marginLeft="80dp"
						 android:layout_centerVertical="true"
						 android:layout_alignParentRight="true"
				         android:textColor="#b53144"
						 android:id="@+id/tv_feeMoney"  />
				</RelativeLayout>

				 <LinearLayout
					 style="@style/line"
					 android:layout_marginLeft="16dp"
					 android:layout_marginRight="16dp"/>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="30dp"
				    android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp">
				    <TextView
						style="@style/wrap_content"
						android:text="应付金额："
						android:layout_alignParentLeft="true"
				        android:layout_centerVertical="true"
						android:textColor="#939393"
						android:layout_width="80dp"
						android:maxLines="1" />
				    
				   	 <TextView
						 style="@style/wrap_content"
						 android:text="￥608.00"
						 android:layout_marginLeft="80dp"
				         android:layout_centerVertical="true"
						 android:layout_alignParentRight="true"
						 android:textColor="#b53144"
						 android:textSize="20dp"
						 android:id="@+id/tv_money"  />
				</RelativeLayout>

				<LinearLayout
					style="@style/line"
					android:layout_marginLeft="16dp"
					android:layout_marginRight="16dp"/>

				<LinearLayout style="@style/line" />
			</LinearLayout>
			
			<Button
				style="@style/btndarkblue"
				android:id="@+id/btn_pay"
				android:text="支付"
				android:layout_width="match_parent"
				android:layout_marginBottom="20dp"
            	android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"
				android:visibility="gone"/>

			<Button
				style="@style/btndarkblue"
				android:id="@+id/btn_payFirst"
				android:text="支付定金"
				android:layout_width="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"
				android:visibility="gone"/>

			<Button
				style="@style/btndarkblue"
				android:id="@+id/btn_payLast"
				android:text="支付尾款"
				android:layout_width="match_parent"
				android:layout_marginBottom="20dp"
				android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"
				android:visibility="gone"/>
			
			<Button
				style="@style/btndarkblue"
				android:id="@+id/btn_confirmProduct"
            	android:text="确认收货"
				android:layout_width="match_parent"
				android:layout_marginBottom="20dp"
            	android:layout_marginLeft="40dp"
				android:layout_marginRight="40dp"
				android:visibility="gone"/>
	    </LinearLayout>
	</ScrollView>

</RelativeLayout>
