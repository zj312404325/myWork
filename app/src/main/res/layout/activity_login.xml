<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffffff"
    tools:context=".LoginActivity" >



    <RelativeLayout
        android:id="@+id/top_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/login_back_blue">

        <TextView
            android:id="@+id/title"
            style="@style/wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <LinearLayout style="@style/fill" android:orientation="vertical" android:layout_below="@id/top_title"  >

        <com.example.administrator.jymall.view.MyEditText
            android:id="@+id/input_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            test:textSize="14"
            test:imgBg="@drawable/input_user"
            test:hint="请填写手机号或者邮箱"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/input_pwd"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请填写密码"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="70dp"
                android:textSize="14dp"
                android:id="@+id/input_pwd"
                android:inputType="textPassword"/>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/input_g"
                android:id="@+id/input_pwd_b"
                android:orientation="horizontal">
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                style="@style/loginbtnlongoff"
                android:id="@+id/loginbtn"
                android:layout_weight="1"
                android:text="登录"
                android:gravity="center"
                android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                style="@style/btngray"
                android:id="@+id/registerbtn"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:background="@null"
                android:text="手机快速注册"
                android:textColor="@color/orange"
                />

            <Button
                android:id="@+id/forgetBtn"
                style="@style/btngray"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="193dp"
                android:background="@null"
                android:text="忘记密码"
                android:textColor="@color/orange"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>