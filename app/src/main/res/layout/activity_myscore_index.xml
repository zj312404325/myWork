<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ececec">

	<include  android:id="@+id/top_title"  layout="@layout/top" />
	<ScrollView style="@style/fill" android:layout_below="@id/top_title" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="#ffffff"
			android:layout_marginTop="10dp">
			<LinearLayout android:layout_width="fill_parent" android:layout_height="1dp" android:background="#d0d0d0" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/rl_myScore"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<LinearLayout
					android:id="@+id/ll_1"
					android:layout_width="30dp"
					android:layout_height="match_parent">
					<ImageView
						android:id="@+id/iv1"
						android:layout_marginLeft="5dp"
						android:layout_width="18dp"
						android:layout_height="25dp"
						android:layout_gravity="center"
						android:background="@drawable/left_icon_myscore"
						android:layout_centerVertical="true"/>
				</LinearLayout>

				<TextView
					style="@style/wrap_content"
					android:layout_toEndOf="@id/ll_1"
					android:text="我的积分"
					android:layout_centerVertical="true"/>

				<ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>

			</RelativeLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="0.5dp"
				android:background="#d0d0d0" />

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:id="@+id/rl_myExchange"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<LinearLayout
					android:id="@+id/ll_2"
					android:layout_width="30dp"
					android:layout_height="match_parent">
					<ImageView
						android:id="@+id/iv2"
						android:layout_marginLeft="5dp"
						android:layout_width="18dp"
						android:layout_height="25dp"
						android:background="@drawable/left_icon_credit_stream"
						android:layout_gravity="center"/>
				</LinearLayout>

				<TextView
					android:layout_toEndOf="@id/ll_2"
					style="@style/wrap_content"
					android:text="我的兑换记录"
					android:layout_centerVertical="true"/>

				<ImageView
					android:layout_width="9dp"
					android:layout_height="16dp"
					android:background="@drawable/right"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"/>

			</RelativeLayout>
			<LinearLayout android:layout_width="fill_parent" android:layout_height="0.5dp" android:background="#d0d0d0" />

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:background="#d0d0d0" />

		</LinearLayout>
	</ScrollView>

</RelativeLayout>
