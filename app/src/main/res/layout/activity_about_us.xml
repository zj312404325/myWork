<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ececec"
	tools:context=".AboutusActivity" >

	<include  android:id="@+id/top_title"  layout="@layout/top" />
	<ScrollView style="@style/fill" android:layout_below="@id/top_title" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="#ffffff"
			android:layout_marginTop="10dp">
			<LinearLayout android:layout_width="fill_parent" android:layout_height="1dp" android:background="#d0d0d0" />

			<LinearLayout
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<TextView
					style="@style/match_parent"
					android:text="金赢智能工业超市"
					android:id="@+id/tv_b_bankName"
					android:textColor="#000000"
					android:textSize="16dp"
					android:layout_marginTop="5dp"/>

				<TextView
					android:layout_marginTop="5dp"
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:background="#c6c6c6"
					/>

				<TextView
					style="@style/match_parent"
					android:layout_marginTop="5dp"
					android:text="				金赢智能工业超市依托金赢网电子商务平台，金赢网平台（www.jinying365.com）作为全球工业生态圈服务平台，凭借雄厚的技术研发团队和优质的客户服务体系，致力于为全球工业提供全面、优质、领先的产品和服务，为客户提供一站式的线上交易解决方案的同时，为我国工业产业的优化升级及顺利转型做出贡献。
				金赢智能工业超市为平台用户提供“一站式MRO工业用品平台”，帮助企业提升效率，降低制造业成本。"
					android:textSize="14dp"/>
			</LinearLayout>

			<LinearLayout
				android:layout_marginTop="5dp"
				android:layout_width="fill_parent"
				android:layout_height="10dp"
				android:background="#d0d0d0" />

			<LinearLayout
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp">

				<TextView
					style="@style/match_parent"
					android:text="联系我们"
					android:textColor="#000000"
					android:textSize="16dp"
					android:layout_marginTop="5dp"/>

				<TextView
					android:layout_marginTop="5dp"
					android:layout_width="fill_parent"
					android:layout_height="1dp"
					android:background="#c6c6c6" />

				<TextView
					style="@style/match_parent"
					android:layout_marginTop="5dp"
					android:text="电		话：0512-52686666" />
				<TextView
					style="@style/match_parent"
					android:layout_marginTop="5dp"
					android:text="地		址：江苏省常熟市东南开发区东南大道333号" />
				<TextView
					style="@style/match_parent"
					android:layout_marginTop="5dp"
					android:text="传		真：0512-52686666" />
				<TextView
					style="@style/match_parent"
					android:layout_marginTop="5dp"
					android:text="邮		箱：kf@jinying365.com" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="0.5dp"
					android:background="#d0d0d0"
					android:layout_marginTop="5dp"/>

				<LinearLayout
					android:layout_marginTop="10dp"
					android:orientation="horizontal"
					android:layout_weight="1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:layout_marginLeft="10dp"
					android:layout_marginRight="10dp">

					<RelativeLayout style="@style/fill" android:layout_weight="1" >
						<ImageView
							android:background="@drawable/code_wechat"
							android:layout_width="100dp"
							android:layout_height="100dp"
							android:scaleType="center"
							android:layout_centerInParent="true" />
					</RelativeLayout>
					<RelativeLayout style="@style/fill" android:layout_weight="1" >
						<ImageView
							android:background="@drawable/code_sina"
							android:layout_width="100dp"
							android:layout_height="100dp"
							android:scaleType="center"
							android:layout_centerInParent="true"  />
					</RelativeLayout>
				</LinearLayout>

				<LinearLayout  android:layout_width="match_parent"  android:layout_height="40dp" >
					<RelativeLayout style="@style/fill" android:layout_weight="1" >
						<TextView
							android:layout_width="100dp"
							android:text="金赢网官方微信"
							android:layout_height="30dp"
							android:layout_centerInParent="true"
							android:gravity="center" />
					</RelativeLayout>
					<RelativeLayout style="@style/fill" android:layout_weight="1" >
						<TextView
							android:layout_width="100dp"
							android:text="金赢网官方微博"
							android:layout_height="30dp"
							android:layout_centerInParent="true"
							android:gravity="center"/>
					</RelativeLayout>
				</LinearLayout>

			</LinearLayout>



		</LinearLayout>
	</ScrollView>

</RelativeLayout>
